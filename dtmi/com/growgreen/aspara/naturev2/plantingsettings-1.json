{
  "@context": "dtmi:dtdl:context;2",
  "@id": "dtmi:com:growgreen:aspara:naturev2:plantingsettings;1",
  "@type": "Interface",
  "displayName": {
    "en": "Planting settings"
  },
  "contents": [
    {
      "@type": "Property",
      "name": "planting",
      "displayName": {
        "en": "Planting status"
      },
      "description": "The device is in planting or idle",
      "schema": "boolean"
    },
    {
      "@type": "Property",
      "name": "plantingMode",
      "displayName": {
        "en": "Planting Mode"
      },
      "description": "The current planting is offline or online",
      "schema": {
        "@type": "Enum",
        "valueSchema": "integer",
        "enumValues": [
          {
            "displayName": {
              "en": "Offline Planting"
            },
            "enumValue": 0,
            "name": "offlineplantingmode"
          },
          {
            "displayName": {
              "en": "Online Planting"
            },
            "enumValue": 1,
            "name": "onlineplantingmode"
          }
        ]
      }
    },
    {
      "@type": "Property",
      "name": "availablePlantingProgramIds",
      "displayName": {
        "en": "Available planting program IDs"
      },
      "description": "The list of availabe planting program IDs",
      "schema": {
        "@type": "Object",
        "fields": [
          {
            "name": "id1",
            "schema": "string"
          },
          {
            "name": "id2",
            "schema": "string"
          },
          {
            "name": "id3",
            "schema": "string"
          },
          {
            "name": "id4",
            "schema": "string"
          },
          {
            "name": "id5",
            "schema": "string"
          },
          {
            "name": "id6",
            "schema": "string"
          }
        ]
      }
    },
    {
      "@type": "Property",
      "name": "plantingProgramId",
      "displayName": {
        "en": "Planting program ID"
      },
      "description": "The current planting program name, e.g. \"OFF0001\"",
      "schema": "string"
    },
    {
      "@type": "Property",
      "name": "plantingId",
      "displayName": {
        "en": "Planting ID"
      },
      "description": "The current unique planting ID, e.g. \"65a4f4e24792c1f610946d1c\"",
      "schema": "string"
    },
    {
      "@type": "Property",
      "name": "startPlantingTs",
      "displayName": {
        "en": "start planting timestamp"
      },
      "description": "The actual start planting timestamp e.g. 1705378153 \"Tuesday, 16 January 2024 04:09:13\"",
      "schema": "long"
    },
    {
      "@type": "Property",
      "name": "plantingTs",
      "displayName": {
        "en": "planting timestamp"
      },
      "description": "The resaultant of offseted planting timestamp e.g. 1705205353 \"Sunday, 14 January 2024 04:09:13\"",
      "schema": "long"
    },
    {
      "@type": "Property",
      "name": "sunriseTs",
      "displayName": {
        "en": "sunrise timestamp"
      },
      "writable": true,
      "description": "The sunrise time stamp (0 - 86400, 00:00 - 23:59) of the current planting, e.g. 21600 = 6:00am",
      "schema": "long"
    },
    {
      "@type": "Command",
      "name": "getAvailablePlantingProgramIds",
      "displayName": "get availabe planting program IDs",
      "description": "Get the available planting program IDs, which could be use for start planting",
      "response": {
        "@type": "CommandPayload",
        "name": "response",
        "schema": "string"
      }
    },
    {
      "@type": "Command",
      "name": "loadPlantingProgram",
      "displayName": "load the planting program to the device",
      "description": "Load the planting program of the planting program ID to the device",
      "request": {
        "@type": "CommandPayload",
        "name": "loadPlaningProgramParameters",
        "schema": {
          "@type": "Object",
          "fields": [
            {
              "name": "plantingProgramId",
              "displayName": "Planting Program ID",
              "schema": "string"
            }
          ]
        }
      },
      "response": {
        "@type": "CommandPayload",
        "name": "response",
        "schema": "string"
      }
    },
    {
      "@type": "Command",
      "name": "startPlanting",
      "displayName": "Start planting",
      "description": "Start a planting with planting program ID, planting ID, start planting timestamp, and platning timestamp",
      "request": {
        "@type": "CommandPayload",
        "name": "startPlaningParameters",
        "schema": {
          "@type": "Object",
          "fields": [
            {
              "name": "plantingProgramId",
              "displayName": "Planting Program ID",
              "schema": "string"
            },
            {
              "name": "plantingId",
              "displayName": "Planting ID",
              "schema": "string"
            },
            {
              "name": "startPlantingTs",
              "displayName": "start planting timestamp",
              "schema": "long"
            },
            {
              "name": "plantingTs",
              "displayName": "planting timestamp",
              "schema": "long"
            }
          ]
        }
      },
      "response": {
        "@type": "CommandPayload",
        "name": "response",
        "schema": "string"
      }
    },
    {
      "@type": "Command",
      "name": "finishPlanting",
      "displayName": "Finish planting",
      "description": "Finish the current planting",
      "response": {
        "@type": "CommandPayload",
        "name": "response",
        "schema": "string"
      }
    },
    {
      "@type": "Command",
      "name": "changePlantingProgram",
      "displayName": "Change the current planting program",
      "description": "Change the current planting program on the fly",
      "request": {
        "@type": "CommandPayload",
        "name": "changePlantingProgramParameters",
        "schema": {
          "@type": "Object",
          "fields": [
            {
              "name": "plantingProgramId",
              "displayName": "Planting Program ID",
              "schema": "string"
            }
          ]
        }
      },
      "response": {
        "@type": "CommandPayload",
        "name": "response",
        "schema": "string"
      }
    },
    {
      "@type": "Command",
      "name": "changePlantingTimestamps",
      "displayName": "Change the current planting timestamps",
      "description": "Change the current planting timestamps on the fly",
      "request": {
        "@type": "CommandPayload",
        "name": "changePlantingTimestampParameters",
        "schema": {
          "@type": "Object",
          "fields": [
            {
              "name": "startPlantingTs",
              "displayName": "start planting timestamp",
              "schema": "long"
            },
            {
              "name": "plantingTs",
              "displayName": "planting timestamp",
              "schema": "long"
            }
          ]
        }
      },
      "response": {
        "@type": "CommandPayload",
        "name": "response",
        "schema": "string"
      }
    }
  ]
}
  